<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	@if (IsSectionDefined("styles"))
	{
		@RenderSection("styles", false)
	}
</head>
<body>
	<div class="container">
		@RenderBody()
	</div>
	@if (IsSectionDefined("scripts"))
	{
		@RenderSection("scripts", false)
	}
</body>
</html>